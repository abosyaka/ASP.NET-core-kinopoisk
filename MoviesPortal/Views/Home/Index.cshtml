@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<MoviesPortal.Models.Movie>

@{
    ViewData["Title"] = "Home Page";
}

    <div class="movie-container">
        @*<h1>@Localizer["Message"]</h1>*@
        @foreach (var item in Model) {
        <div class="movie">
            <img src="@item.Poster" />
            <div class="movie-info text-white">
                <a class="nav-link text-white" asp-action="Details" asp-route-id="@item.Id"><h3>@item.Title</h3></a>
            </div>
        </div>
        }
    </div>
